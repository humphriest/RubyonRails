<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
	  <th>Genre</th>
      <th>Blurb</th>
      <th>Release date</th>
      <th>Rating</th>
      <th>Best seller</th>
	  <th>Reviews</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.blurb %></td>
        <td><%= book.release_date %></td>
        <td><%= book.rating %></td>
        <td><%= book.best_seller %></td>
		<td><%= book.genre_id %></td>
		
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

